<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_background"
    android:layout_width="match_parent"
    android:layout_height="54.5dp"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cb_choose"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="7dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_alarmOrSendOrReceive"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="7dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_delayDays"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="延期3天"
            android:textColor="#ff9393"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_line_1"
            style="@style/iv_line_schedule"
            android:layout_height="0.5px"
            android:background="@color/line_E0E0E0" />

        <ImageView
            android:id="@+id/iv_line_2"
            style="@style/iv_line_schedule"
            android:layout_height="0.5px"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@color/line_E0E0E0" />
    </RelativeLayout>


</LinearLayout>